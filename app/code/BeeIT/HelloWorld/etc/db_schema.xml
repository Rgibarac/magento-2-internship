<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="beeit_todocrud_todoitem" resource="default" engine="innodb" comment="BeeIT ToDoCrud ToDoItem">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="description" comment=""/>
        <column xsi:type="date" name="date_completed" comment=""/>
        <column xsi:type="date" name="creation_time" comment=""/>
        <column xsi:type="date" name="update_time" comment=""/>
        <column xsi:type="boolean" name="completed" comment=""/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        
    </table>
</schema>
